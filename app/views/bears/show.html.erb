<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body text-center">
          <h1><strong>Congratulations you have just added <%= @bear.name.capitalize %> to Bearbnb!</strong></h1>
            <br>
          <%= cl_image_tag @bear.photo.key, height: 300, width: 400, crop: :fill %>
        </div>
        <br>
        <br>
        <br>
        <%= render "form", bear: @bear %>
      </div>
    </div>
    <div class="col-md-6">
      <header>
        <h1><%= @bear.name.capitalize %></h1>
      </header>
      <div class="m-0 mb-1 ms-1">
        <p><strong>Color:</strong> <%= @bear.color.capitalize %></p>
        <p><strong>Size:</strong> <%= @bear.size.capitalize %></p>
        <p><strong>Location:</strong> <%= @bear.location.capitalize %></p>
        <p><strong>Price per day:</strong> <%= @bear.price %>â‚¬</p>
        <p><strong>Owner:</strong> <%= @bear.user.first_name.capitalize %> <%= @bear.user.last_name.upcase %></p>
      </div>

      <div class="d-flex justify-content-center align-items-center mt-3">
        <%= link_to "Edit bear", edit_bear_path, class: "btn btn-flat me-3" %>
        <%= link_to "Delete",
          bear_path(@bear),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
          class: "btn btn-flat me-3 btn-delete" %>
        <%= link_to "Back to home", root_path, class: "btn btn-flat" %>
        <br>
        <br>
        <br>
        <br>
        <%# <div style="width: 400px; height: 300px;"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            <%# data-map-api-key-value="<%= ENV['MAPBOX_API_KEY']"> %>
        <%# </div> %>
      </div>
    </div>
  </div>
</div>
