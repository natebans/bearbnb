<div class="text-center m-3">
  <h1><%= @bear.name %></h1>
  <%= cl_image_tag @bear.photo.key, height: 300, width: 400, crop: :fill %>
  <div class="mt-2">
    <p>Color: <%= @bear.color %></p>
    <p>Size: <%= @bear.size %></p>
    <p>Location: <%= @bear.location %></p>
    <p>Price per day: <%= @bear.price %>â‚¬</p>



    <% if policy(@bear).edit? %>
      <%= link_to "Edit bear", edit_bear_path, class: "btn btn-flat"  %>
    <% end %>
  </div>

  <p>
    <% if policy(@bear).destroy? %>
    <%= link_to "Delete",
      bear_path(@bear),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
      class: "btn btn-warning mb-2"%>
      <% end %>
  </p>

  <div>
    <%= render "form", bear: @bear %>
  </div>
  <p><%= link_to "Back to home", root_path, class: "btn btn-flat" %></p>
</div>
