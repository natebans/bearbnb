<div class="container mt-2">
  <%= simple_form_for(@bear) do |f| %>
    <%= f.input :name %>
    <%= f.input :color %>
    <%= f.input :size, collection: ["Small", "Medium", "Large"] %>
    <%= f.input :location %>
    <%= f.input :price %>
    <%= f.input :picture_url, as: :file %>
    <%= f.submit class: "btn btn-flat" %>
  <% end %>
</div>
<p class="mt-2"><%= link_to "Back to bear", bear_path(@bear), class: "btn btn-flat" %></p>
